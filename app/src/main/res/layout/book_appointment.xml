<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/doctorFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        tools:text="Doctor" />
    <TextView
        android:id="@+id/doctorLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/doctorFirst"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        tools:text="Lastname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/specialty"
        android:layout_below="@+id/doctorFirst"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        tools:text="Pediatrics"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_below="@+id/specialty"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        tools:text="November 30, 2023"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startTime"
        android:layout_below="@+id/date"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        tools:text="12:00"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/startTime"
        android:id="@+id/hyphen"
        android:layout_below="@id/date"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        tools:text="--"
        />
    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/endTime"
        android:layout_toEndOf="@+id/hyphen"
        android:layout_below="@id/date"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        tools:text="12:30"
        />


    <Button
        android:id="@+id/book"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="0dp"
        android:layout_above="@+id/div"
        android:backgroundTint="#26EA18"
        android:textSize="15dp"
        tools:text="Book" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/div"
        android:layout_below="@+id/startTime"
        android:background="@color/cardview_shadow_start_color"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" />


</RelativeLayout>